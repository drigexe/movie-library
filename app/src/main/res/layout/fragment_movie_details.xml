<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_marginTop="20dp"
        android:id="@+id/detailsImageView"
        android:layout_width="250dp"
        android:layout_height="320dp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:src="@drawable/noimage"/>

    <TextView
        android:text="@string/error_text_view_downloading"
        android:layout_centerInParent="true"
        android:id="@+id/text_view_error_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/text_view_title_details"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/detailsImageView"/>

    <TextView
        android:visibility="invisible"
        android:layout_marginTop="5dp"
        android:id="@+id/text_view_tagline_details"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/error_text_view_tagline_load_error"
        android:layout_below="@+id/text_view_title_details"/>

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/text_view_release_date_details"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text_view_tagline_details"/>

</RelativeLayout>