<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:text="The good, the bad and the ugly"
            android:lines="5"
            android:ellipsize="end"
            android:id="@+id/text_view_title_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_toStartOf="@+id/image_view_list_poster"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_marginTop="20dp"
            android:text="2018-01-10"
            android:id="@+id/text_view_release_date_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_below="@+id/text_view_title_list"/>

        <ImageView
            android:src="@drawable/noimage"
            android:layout_alignParentEnd="true"
            android:id="@+id/image_view_list_poster"
            android:layout_width="140dp"
            android:layout_height="185dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>